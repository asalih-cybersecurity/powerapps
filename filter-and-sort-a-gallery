Sort
    (If
        (IsBlank(TextSearchBox1.Text),
        FlooringEstimates,
        Filter(
            FlooringEstimates,
            TextSearchBox1.Text in Text(Name)
        )
    ),
    Name,
    If(
        SortDescending1,
        SortOrder.Descending,
        SortOrder.Ascending
    )
)
